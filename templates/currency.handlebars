<div class="containerLogin">
  <div class="row d-flex justify-content-center mt-5">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      <div class="card py-3 px-2">
        <h1>Currency Converter</h1>
        <div class="division"></div>

        
        <label for="amount">Amount:</label>
        <input type="number" id="amount" placeholder="Enter amount">
        <label for="fromCurrency">From:</label>
        <select id="fromCurrency">
          <option value="USD">USD</option>
          <option value="EUR">EUR</option>
          <option value="GBP">GBP</option>
          <option value="QAR">QAR</option>
          <!-- Add more currencies here -->
        </select>

        <label for="toCurrency">To:</label>
        <select id="toCurrency">
          <option value="USD">USD</option>
          <option value="EUR">EUR</option>
          <option value="GBP">GBP</option>
          <option value="QAR">QAR</option>
          <!-- Add more currencies here -->
        </select>
        <div class="division"></div>

        <button onclick="convert()">Convert</button>
        
        <p id="result"></p>

         </div>
         </div>     

      </div>
    </div>  
</div>

  <script>
    // Define currency exchange rates
    const exchangeRates = {
      USD: 1,
      EUR: 0.83,
      GBP: 0.72,
      QAR: 3.64,
      JPY: 109.47,
      AUD: 1.31,
      CAD: 1.25,
      CHF: 0.92
    };

    // Function to convert from one currency to another
    function convert() {
      const amount = parseFloat(document.getElementById('amount').value);
      const fromCurrency = document.getElementById('fromCurrency').value;
      const toCurrency = document.getElementById('toCurrency').value;

      if (exchangeRates[fromCurrency] && exchangeRates[toCurrency]) {
        const convertedAmount = (amount / exchangeRates[fromCurrency]) * exchangeRates[toCurrency];
        document.getElementById('result').textContent = `${amount} ${fromCurrency} equals ${convertedAmount.toFixed(2)} ${toCurrency}`;
      } else {
        document.getElementById('result').textContent = "Invalid currency";
      }
    }
  </script>
