<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Suggested Planned Trips</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
    /* Your CSS styles here */
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .trip-card {
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
      margin-bottom: 20px;
    }

    .trip-card h2 {
      margin-top: 0;
      color: #555;
    }

    .trip-card p {
      color: #777;
    }

    .trip-card .fa-map-marker {
      color: #f44336;
    }

    .trip-card .fa-calendar {
      color: #2196f3;
    }

    .add-trip-btn {
      display: block;
      margin: 20px auto;
      background-color: #800000;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s, color 0.3s;
    }

    .add-trip-btn:hover {
      background-color: #1372f7;
    }

    .input-group {
      margin-bottom: 10px;
    }

    .input-group label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }

    .input-group input {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Suggested Planned Trips in Qatar</h1>

    <!-- Trip Cards Container -->
    <div id="trip-cards-container">
      <!-- Trip Cards will be dynamically added here -->
    </div>

    <!-- Add Trip Button -->
    <button class="add-trip-btn" onclick="addNewTrip()">Add New Trip</button>

    <!-- Modal for Adding New Trip -->
    <div id="addTripModal" class="modal">
      <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <h2>Add New Trip</h2>
        <div class="input-group">
          <label for="destination">Destination:</label>
          <input type="text" id="destination" placeholder="Enter destination">
        </div>
        <div class="input-group">
          <label for="dates">Dates:</label>
          <input type="text" id="dates" placeholder="Enter dates">
        </div>
        <div class="input-group">
          <label for="description">Description:</label>
          <textarea id="description" placeholder="Enter description"></textarea>
        </div>
        <button onclick="saveNewTrip()" class="add-trip-btn">Save Trip</button>
      </div>
    </div>
  </div>

  <script>
    // Function to open the modal for adding a new trip
    function addNewTrip() {
      document.getElementById("addTripModal").style.display = "block";
    }

    // Function to close the modal
    function closeModal() {
      document.getElementById("addTripModal").style.display = "none";
    }

    // Function to save the new trip
    function saveNewTrip() {
      var destination = document.getElementById("destination").value;
      var dates = document.getElementById("dates").value;
      var description = document.getElementById("description").value;

      // Create trip card HTML
      var tripCardHTML = `
        <div class="trip-card">
          <h2>${destination}</h2>
          <p><i class="fa fa-map-marker"></i> ${destination}, Qatar</p>
          <p><i class="fa fa-calendar"></i> ${dates}</p>
          <p>${description}</p>
        </div>
      `;

      // Append trip card HTML to the container
      document.getElementById("trip-cards-container").innerHTML += tripCardHTML;

      // Close the modal
      closeModal();

      // Clear input fields
      document.getElementById("destination").value = "";
      document.getElementById("dates").value = "";
      document.getElementById("description").value = "";
    }
  </script>
</body>

</html>
