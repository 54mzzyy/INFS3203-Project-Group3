  *::after { 
    box-sizing: border-box;
    }

    img {
      height: auto;
      max-width: 100%;
      vertical-align: middle;
    }

    .btn {
      background-color: white;
      border: 1px solid @gray-light;
      //border-radius: 1rem;
      color: #fff;
      padding: 0.5rem;
      text-transform: lowercase;
    }

    .btn--block {
      display: block;
      width: 100%;
    }

    .cards {
      display: flex;
      flex-wrap: wrap;
      list-style: none;
      margin: 0;
      padding: 0;
      padding-left: 30;
      padding-right: 30;
    }

    .cards__item {
      display: flex;
      padding: 2rem;
      @media(min-width: 40rem) {
        width: 50%;
      }
      @media(min-width: 56rem) {
        width: 33.3333%;
      }
    }

    .card {
      background-color: white;
      border-radius: 0.25rem;
      box-shadow: 0 20px 40px -14px rgba(0,0,0,0.9);
      display: flex;
      flex-direction: column;
      overflow: hidden;
      &:hover {
        .card__image {
          filter: contrast(100%);
        }
        }
      }

    .card__content {
      display: flex;
      flex: 1 1 auto;
      flex-direction: column;
      padding: 1rem;
      }

    .card__image {
      background-position: center center;
      background-repeat: no-repeat;
      background-size: cover;
      border-top-left-radius: 0.25rem;
      border-top-right-radius: 0.25rem;
      filter: contrast(70%);
      //filter: saturate(180%);
      overflow: hidden;
      position: relative;
      transition: filter 0.5s cubic-bezier(.43,.41,.22,.91);;
      &::before {
        content: "";
        display: block;
        padding-top: 56.25%; // 16:9 aspect ratio
      }
      @media(min-width: 40rem) {
        &::before {
          padding-top: 66.6%; // 3:2 aspect ratio
        }
      }
    }


    .card__title {
      color: @gray-dark;
      font-size: 1.25rem;
      font-weight: 300;
      letter-spacing: 2px;
      text-transform: uppercase;
    }

    .card__text {
      flex: 1 1 auto;
      font-size: 0.875rem;
      line-height: 1.5;
      margin-bottom: 1.25rem;
      text-align: justify;
      text-align-last: center;
      padding-left: 10%;
      padding-right: 10%;
    }


    p {
      margin-bottom: 0.8em;
    }

    .card-header {
      background-color: #401919;
      color: #ffffff;
      text-align: left;
    }

    .card-body {
      text-align: left;
    }

    .btn .btn-primary {
